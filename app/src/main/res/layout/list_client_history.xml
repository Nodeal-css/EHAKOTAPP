<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgHistory"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:visibility="visible"
        app:srcCompat="@drawable/img_2" />

    <TextView
        android:id="@+id/txtBookIDReport"
        android:layout_toRightOf="@+id/imgHistory"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book ID: "/>

    <TextView
        android:id="@+id/txtDateCompleted"
        android:layout_toRightOf="@+id/imgHistory"
        android:layout_below="@+id/txtBookIDReport"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Completed"/>

    <TextView
        android:id="@+id/txtAmount"
        android:layout_toRightOf="@+id/imgHistory"
        android:layout_below="@+id/txtDateCompleted"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount"/>



</RelativeLayout>