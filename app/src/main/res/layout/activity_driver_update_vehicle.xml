<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DriverUpdateVehicle">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="25dp">

                <ImageView
                    android:id="@+id/imgVehicleUpdate"
                    android:layout_width="230dp"
                    android:layout_height="180dp"
                    android:layout_marginBottom="20dp"
                    android:src="@color/purple_200" />

                <TextView
                    android:id="@+id/txtVehicleModelUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/txtPlateNumberUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plate Number:"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/txtTypeUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: "
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/txtLocationUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: "
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/txtRateUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate: "
                    android:textColor="@color/black"
                    android:textSize="19sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnChooseUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60dp"
                android:text="Update vehicle"
                app:cornerRadius="40dp" />

            <LinearLayout
                android:id="@+id/linearLayoutUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/rectangle"
                android:orientation="vertical"
                android:padding="30dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/imgChangeVehicle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="80dp"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />

                <Button
                    android:id="@+id/btnChangeImgVehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="60dp"
                    android:text="Choose Image"
                    app:cornerRadius="40dp" />

                <EditText
                    android:id="@+id/editVehiclePathChange"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:hint="img src" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text=" Plate number"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/editPlateNumChange"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Plate Number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text=" Model"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/editModelChange"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Model" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text=" Type"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/editTypeChange"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Type" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text=" Location"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/editLocationChange"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text=" Rate in Pesos"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/editRateChange"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Rate" />

                <Button
                    android:id="@+id/btnSaveVehicleChange"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="60dp"
                    android:layout_marginVertical="30dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Save"
                    android:textColor="@color/purple_700"
                    app:cornerRadius="40dp"
                    app:iconTint="#00673AB7"
                    app:strokeColor="#673AB7"
                    app:strokeWidth="2dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>