<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverOngoing"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutDriverOngoing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:layout_marginHorizontal="20dp"
        >

        <ImageView
            android:id="@+id/imgClientDriverOngoing"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/purple_700"
            app:cornerRadius="90dp" />

        <TextView
            android:id="@+id/txtClientNameOngoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/imgClientDriverOngoing"
            android:text="Name: "
            android:textSize="19sp" />

        <TextView
            android:id="@+id/txtClientEmailOngoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtClientNameOngoing"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/imgClientDriverOngoing"
            android:text="Email: "
            android:textSize="19sp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/txtBookingStatusAPR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ONGOING"
            android:textSize="20sp"
            android:textColor="#ff9900"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Pick-Up Location"
            android:textColor="@color/black"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/editDriverPickupOngoing"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Address"
            android:textSize="15sp"
            android:drawableLeft="@android:drawable/ic_menu_mylocation"
            android:focusable="false"
            android:clickable="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Delivery Location"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/editDriverDeliveryOngoing"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Address"
            android:textSize="15sp"
            android:drawableLeft="@android:drawable/ic_menu_mylocation"
            android:focusable="false"
            android:clickable="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Remarks"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/editDriverRemarksOngoing"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Remarks"
            android:textSize="15sp"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:focusable="false"
            android:clickable="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Service Vehicle used"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="25dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imgDriverVehicleOngoing"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:src="@color/purple_700"/>

        <TextView
            android:id="@+id/txtDriverModelOngoing"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="27dp"
            android:text="Vehicle: " />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="98dp">

        <Button
            android:id="@+id/btnCompleteBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:cornerRadius="50dp"
            android:text="Complete"/>

    </LinearLayout>

</LinearLayout>