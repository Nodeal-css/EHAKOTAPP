<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverProfile"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_driver"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@color/purple_700"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtDriverProfileID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver ID: "
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rectangle_gray"
            android:padding="20dp">

            <TextView
                android:id="@+id/txtDriverProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/txtDriverProfileAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:layout_marginTop="5dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/txtDriverProfileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Email: "
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/txtDriverProfileType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="User: "
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btnDriverLogOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Log Out"
                android:backgroundTint="#FFFFFF"
                android:cursorVisible="false"
                android:textColor="@color/purple_700"
                android:visibility="visible"
                app:iconTint="#00673AB7"
                app:strokeColor="#673AB7"
                app:strokeWidth="2dp"
                app:cornerRadius="50dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>